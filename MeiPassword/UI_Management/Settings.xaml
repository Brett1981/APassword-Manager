<Window x:Class="MeiPassword.UI_Management.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeiPassword.UI_Management"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="293.333" Width="352.439" Background="{x:Null}" Foreground="{x:Null}">
    <Border BorderThickness="5,10,15,20" Background="#FF38366A" Padding="5" CornerRadius="15" BorderBrush="#FF38366A" OpacityMask="#FF38366A">
        <Grid x:Name="Minmize" Margin="-5,-7,-10,-15" Background="#FF38366A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="CloseButton" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" Width="23" BorderBrush="{x:Null}" Foreground="{x:Null}" RenderTransformOrigin="1.174,0.6" Style="{StaticResource MyButton}" Height="18" Click="CloseButton_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/APasswordManager;component/Images/macos-close-90.png" Stretch="Uniform" />
                </Button.Background>
            </Button>
            <CheckBox x:Name="Music_OnOff" Content="Aktiviere Music" HorizontalAlignment="Left" Margin="23,82,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="17" Width="140" Style="{StaticResource ModernCheckbox}" Click="Music_OnOff_Checked" IsChecked="False"/>
            <CheckBox x:Name="Disable_Enable_Discord" Content="Aktiviere Discord RPC" HorizontalAlignment="Left" Margin="23,104,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="17" Width="140" Style="{StaticResource ModernCheckbox}" Click="Disable_Enable_Discord_Checked" IsChecked="True"/>
            <Button x:Name="OpenPasswordFolder" Content="Öffne Password Folder" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Width="161" Height="32" Background="#FF232327" Foreground="White" Grid.Column="1" Style="{StaticResource Corner}" FontSize="7" Click="OpenPasswordFolder_Click" />
            <Button x:Name="OpenConfig" Content="Öffne Config Folder" HorizontalAlignment="Left" Margin="171,233,0,0" VerticalAlignment="Top" Width="156" Height="32" Background="#FF232327" Foreground="White" Grid.Column="1" Style="{StaticResource Corner}" FontSize="7" Click="OpenConfig_Click" />
            <Button x:Name="OpenFolder" Content="Öffne Programm Folder" HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Width="161" Height="30" Background="#FF232327" Foreground="White" Grid.Column="1" Style="{StaticResource Corner}" FontSize="7" Click="OpenFolder_Click" />
            <Label x:Name="title" Content="Einstellungen" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="230" Foreground="White"/>
            <CheckBox x:Name="AutoLogin" Content="Autologin" HorizontalAlignment="Left" Margin="23,126,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="140" Background="White" Style="{StaticResource ModernCheckbox}" Click="AutoLogin_Checked"/>
            <Label x:Name="infotext" Content="Hier kannst du das Programm einstellen" HorizontalAlignment="Left" Margin="23,36,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="230" Foreground="White" FontSize="8"/>
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="3" Margin="23,30,0,0" VerticalAlignment="Top" Width="223" Grid.ColumnSpan="2" Background="White"/>
            <ComboBox x:Name="langs" HorizontalAlignment="Left" Margin="23,147,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Background="#72000000" Foreground="#FFFBFBFB" BorderBrush="#72000000" FontSize="12" FontFamily="Yu Gothic">
                <ComboBoxItem Name="eng" IsSelected="True" Content="Englisch"></ComboBoxItem>
                <ComboBoxItem Name="ger" IsSelected="False" Content="German"></ComboBoxItem>
            </ComboBox>
            <Button x:Name="saveset" Content="" HorizontalAlignment="Left" Margin="186,147,0,0" VerticalAlignment="Top" Width="98" Height="30" Background="#FF232327" Foreground="White" Grid.Column="1" Style="{StaticResource Corner}" FontSize="7" Click="saveset_Click" />
        </Grid>
    </Border>
</Window>
